@model RentaCarros.Models.SetPasswordViewModel

@{
    ViewData["title"] = "Asignar Contraseña";
}

<flash dismissable="true" />

<form asp-action="Register" id="form">
    <input asp-for="UserId" type="hidden" />
    <div class="row mb-1">
        <div class="col-4 offset-4 text-center">
            <h3 class="h3 mb-3">Asignación de Contraseña</h3>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-6 offset-3">
            <partial name="_Toast" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-4 offset-4">
            <div class="form-group">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control border-2 border-2" required autocomplete="off" />
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control border-2 border-2" required autocomplete="off" />
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col d-flex justify-content-center align-items-end gap-3">
            <input type="submit" id="submit" class="btn btn-success" value="Activar Cuenta" />
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }