@model RentaCarros.Models.LoginViewModel

@{
    ViewData["title"] = "Iniciar Sesión";
}

<flash dismissable="true" />

<form asp-action="Login" id="form">
    <div class="row mb-1">
        <div class="col-4 offset-4 text-center">
            <h3 class="h3 mb-3">Iniciar Sesión</h3>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-6 offset-3">
            <partial name="_Toast" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-4 offset-4">
            <div class="form-group">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control border-2 border-2" required autocomplete="off" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control border-2 border-2" required autocomplete="off" />
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2 offset-4">
            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>
        </div>
        <div class="col-2 d-flex justify-content-center align-items-end gap-3">
            <input type="submit" id="submit" class="btn btn-success" value="Ingresar" />
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }