@model RentaCarros.Models.AddUserViewModel

@{
    ViewData["title"] = "Registrarse";
}

<form asp-action="Register" id="form" enctype="multipart/form-data">
    <div class="row mb-3">
        <div class="col-4 offset-4 text-center">
            <h3 class="h3 mb-1">Formulario de Registro</h3>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-12">
            <flash dismissable="true" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-4 offset-2">
            <label asp-for="Document" class="form-label"></label>
            <input asp-for="Document" class="form-control border-2 border-2" required autocomplete="off" />
            <span asp-validation-for="Document" class="text-danger validation-feedback"></span>
        </div>
        <div class="col-4">
            <label asp-for="DocumentType" class="form-label"></label>
            <select asp-for="DocumentType" asp-items="Model.DocumentTypes" class="form-select border-2"></select>
            <span asp-validation-for="DocumentType" class="text-danger validation-feedback"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-4 offset-2">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control border-2" required autocomplete="off" />
            <span asp-validation-for="FirstName" class="text-danger validation-feedback"></span>
        </div>
        <div class="col-4">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control border-2" required autocomplete="off" />
            <span asp-validation-for="LastName" class="text-danger validation-feedback"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-4 offset-2">
            <label asp-for="PhoneNumber" class="form-label"></label>
            <input asp-for="PhoneNumber" class="form-control border-2" required autocomplete="off" />
            <span asp-validation-for="PhoneNumber" class="text-danger validation-feedback"></span>
        </div>
        <div class="col-4">
            <label asp-for="UserName" class="form-label"></label>
            <input asp-for="UserName" class="form-control border-2" required autocomplete="off" />
            <span asp-validation-for="UserName" class="text-danger validation-feedback"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-4 offset-2">
            <label asp-for="LicenseFrontImageFile" class="form-label"></label>
            <input asp-for="LicenseFrontImageFile" asp-items="Model.LicenseCategories" class="form-select border-2" />
            <span asp-validation-for="LicenseFrontImageFile" class="text-danger validation-feedback"></span>
        </div>
        <div class="col-4">
            <label asp-for="LicenseBackImageFile" class="form-label"></label>
            <input asp-for="LicenseBackImageFile" asp-items="Model.LicenseCategories" class="form-select border-2" />
            <span asp-validation-for="LicenseBackImageFile" class="text-danger validation-feedback"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-4 offset-4 d-flex justify-content-center align-items-end gap-3">
            <input type="submit" id="submit" class="btn btn-success" value="Registrar" />
            <a asp-action="Login" class="btn btn-primary">Ya tengo una cuenta!</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }