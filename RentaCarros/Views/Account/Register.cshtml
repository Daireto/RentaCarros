@model RentaCarros.Models.AddUserViewModel

@{
    ViewData["title"] = "Registrarse";

    var DocumentTypes = Html.GetEnumSelectList<RentaCarros.Enums.DocumentType>();
    foreach (var documentType in DocumentTypes)
    {
        if (documentType.Text == "CC")
        {
            documentType.Text = "Cédula de Ciudadanía";
        }
        else if (documentType.Text == "CE")
        {
            documentType.Text = "Cédula de Extranjería";
        }
        else if (documentType.Text == "PAP")
        {
            documentType.Text = "Pasaporte";
        }
    }
}

<flash dismissable="true" />

<form asp-action="Register" id="form">
    <div class="row mb-3">
        <div class="col-4 offset-4 text-center">
            <h3 class="h3 mb-1">Formulario de Registro</h3>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-6 offset-3">
            <partial name="_Toast" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col">
            <label asp-for="Document" class="form-label"></label>
            <input asp-for="Document" class="form-control border-2 border-2" required autocomplete="off" />
        </div>
        <div class="col">
            <label asp-for="DocumentType" class="form-label"></label>
            <select asp-for="DocumentType" asp-items="@DocumentTypes" class="form-select border-2"></select>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control border-2" required autocomplete="off" />
        </div>
        <div class="col">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control border-2" required autocomplete="off" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col">
            <label asp-for="PhoneNumber" class="form-label"></label>
            <input asp-for="PhoneNumber" class="form-control border-2" required autocomplete="off" />
        </div>
        <div class="col">
            <label asp-for="UserName" class="form-label"></label>
            <input asp-for="UserName" class="form-control border-2" required autocomplete="off" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col">
            <label asp-for="License" class="form-label"></label>
            <input asp-for="License" class="form-control border-2" required autocomplete="off" />
        </div>
        <div class="col d-flex justify-content-center align-items-end gap-3">
            <input type="submit" id="submit" class="btn btn-success" value="Registrar" />
            <a asp-action="Login" class="btn btn-primary">Ya tengo una cuenta!</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }