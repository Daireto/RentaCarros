@model RentaCarros.Models.LinkVehicleViewModel

@{
    ViewData["Title"] = "Seleccionar vehículo";
}

<div class="row bg-white rounded p-4">
    <form asp-action="ShowVehicles" id="form">
        <input type="hidden" asp-for="BookingId" />
        <input type="hidden" asp-for="VehicleId" />
        <div class="row mb-3">
            <div class="col-12 text-center">
                <h3 class="h3 mb-1">Lista de vehículos disponibles</h3>
                <h5>Por favor seleccione el vehículo que desee reservar</h5>
            </div>
        </div>
    </form>

    @foreach (var vehicle in Model.Vehicles)
    {
        <div class="col">
            <div class="card border border-dark" style="width: 20rem;">
                <img class="card-img-top" src="@vehicle.ImageFullPath" alt="@vehicle.Maker @vehicle.Line @vehicle.Model">
                <div class="card-body">
                    <h5 class="card-title">@vehicle.Maker @vehicle.Line @vehicle.Model</h5>
                    <p class="card-text">@vehicle.Capacity</p>
                    <p class="card-text">@vehicle.DoorNumber</p>
                    <p class="card-text">@vehicle.Color</p>
                    <p class="card-text">@vehicle.Mileage</p>
                    <p class="card-text">@vehicle.DayValue</p>
                    <button class="btn btn-success" onclick="selectVehicle(@vehicle.Id)">Reservar</button>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        function selectVehicle(vehicleId) {
            $("#VehicleId").val(vehicleId);
            $("#form").submit();
        };
    </script>
    }
